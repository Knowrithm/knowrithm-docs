{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Knowrithm Documentation",
  "colors": {
    "primary": "#2563EB",
    "light": "#60A5FA",
    "dark": "#1D4ED8"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Start here",
            "pages": [
              "index",
              "quickstart",
              "development",
              "platform/architecture"
            ]
          },
          {
            "group": "Data & Knowledge",
            "pages": [
              "platform/data-sources"
            ]
          },
          {
            "group": "SDKs",
            "pages": [
              "sdk/python",
              "sdk/typescript"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Core services",
            "pages": [
              "api-reference/authentication",
              "api-reference/agents",
              "api-reference/documents",
              "api-reference/conversations",
              "api-reference/settings",
              "api-reference/administration"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Status",
          "href": "https://status.knowrithm.org",
          "icon": "chart-bar"
        },
        {
          "anchor": "Changelog",
          "href": "https://docs.knowrithm.org/changelog",
          "icon": "sparkles"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@knowrithm.org"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Sign in",
      "href": "https://www.knowrithm.org"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/knowrithm",
      "github": "https://github.com/Knowrithm",
      "linkedin": "https://www.linkedin.com/company/knowrithm"
    }
  }
}
